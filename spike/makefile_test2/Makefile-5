IDIR =include
CC=gcc
CFLAGS=-I$(IDIR)

ODIR=obj
LDIR=lib
SDIR=src
LIBS=-lm

SOURCES=hellofunc.c hellomake.c

_SOURCES=$(addprefix $(SDIR)/,$(SOURCES))

_DEPS = hellomake.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = hellomake.o hellofunc.o 
# OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))
OBJ = $(_SOURCES:.c=.o)
OBJ = $(patsubst $(SDIR),$(ODIR),$(_SOURCES))


EXECUTABLE=build/hellomake

$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

$(EXECUTABLE): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~ 